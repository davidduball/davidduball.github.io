body {
  /* background-color: #f4f4f4;
  background-color:red;
  color: #333;
  font-family: Arial, sans-serif;
  padding: 20px;
}

h1 {
  text-align: center;
  color: #2c3e50;
  margin-bottom: 20px;
}

.form-container {
  max-width: 600px;
  margin: 0 auto;
  background-color: white;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

form {
  display: flex;
  flex-direction: column;
}

label {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 1.1em;
}

input[type="text"], textarea {
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1em;
}

input[type="submit"] {
  background-color: #3498db;
  color: white;
  border: none;
  padding: 10px;
  font-size: 1.2em;
  cursor: pointer;
  border-radius: 4px;
}

input[type="submit"]:hover {
  background-color: #2980b9;
}

.result-message {
  margin-top: 20px;
  font-size: 1.2em;
  font-weight: bold;
  color: #e74c3c;
}
